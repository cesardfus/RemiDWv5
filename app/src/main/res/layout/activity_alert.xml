<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".secundarios.AlertActivity">

    <TextView
        android:id="@+id/textView6"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal|center_vertical"
        android:text="ALERTA"
        android:textSize="40sp"
        android:textStyle="normal|bold|italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        app:srcCompat="@drawable/campana" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtalerta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/antoniobold"
            android:gravity="center_horizontal|center_vertical"
            android:text="-"
            android:textColor="@color/blackcolor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/extggg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antoniobold"
            android:gravity="center_horizontal|center_vertical"
            android:text="SE HA LANZADO UNA ALERTA DESDE EL SIGUIENTE NÃšMERO"
            android:textColor="@color/blackcolor"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lblnumtel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/antoniobold"
            android:gravity="center_horizontal|center_vertical"
            android:text="000000000"
            android:textColor="@color/blackcolor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/antoniobold"
            android:gravity="center_horizontal|center_vertical"
            android:text="LA ALERTA ES LA SIGUIENTE"
            android:textColor="@color/blackcolor"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnsalir"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="100sp"
            android:layout_marginBottom="10sp"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="@font/antoniobold"
            android:text="SALIR"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btndescartar"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="100sp"
            android:layout_marginBottom="10sp"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="@font/antoniobold"
            android:text="DESCARTAR"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnpararalerta"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="100sp"
            android:layout_marginBottom="10sp"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="@font/antoniobold"
            android:text="PARAR"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopollos"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/lylogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="75sp"
        android:paddingTop="20sp"
        android:paddingRight="75sp"
        android:paddingBottom="20sp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/extggg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/gothica1black"
            android:gravity="center_horizontal|center_vertical"
            android:text="BIENVENIDO"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            app:srcCompat="@drawable/ic_user" />

        <EditText
            android:id="@+id/etxuserlog"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/botonredondo"
            android:ems="5"
            android:fontFamily="@font/gothica1regular"
            android:gravity="center_horizontal|center_vertical"
            android:hint="USUARIO"
            android:inputType="textPersonName"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgviewpass"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            app:srcCompat="@drawable/ic_visibility_off" />

        <EditText
            android:id="@+id/etxpasslog"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/botonredondo"
            android:ems="5"
            android:fontFamily="@font/gothica1regular"
            android:gravity="center_horizontal|center_vertical"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
      </LinearLayout>

      <CheckBox
            android:id="@+id/chkremember"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/botonredondo"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Recordarme"
            android:textColorHighlight="@color/primary_dark"
            android:textColorLink="@color/primary_dark"
            android:textCursorDrawable="@color/primary_dark" />

        <CheckBox
            android:id="@+id/chkingresoautomatico"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="10sp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Ingreso Automatico" />

        <Button
            android:id="@+id/btningreso"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/btn_login_log"
            android:fontFamily="@font/gothica1black"
            android:gravity="center_horizontal|center_vertical"
            android:text="INGRESAR"
            android:textColor="@drawable/txt_btn"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgok"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginTop="-10sp"
            android:visibility="gone"
            app:srcCompat="@drawable/ok" />

        <TextView
            android:id="@+id/txtvolvido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:ellipsize="middle"
            android:fontFamily="@font/gothica1black"
            android:gravity="center_horizontal|center_vertical"
            android:text="Olvido su contraseÃ±a?"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtvregistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:ellipsize="middle"
            android:fontFamily="@font/gothica1black"
            android:gravity="center_horizontal|center_vertical"
            android:text="No tiene cuenta?. Registrarse"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnsalirlog"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/btn_login_salir"
            android:fontFamily="@font/gothica1black"
            android:gravity="center_horizontal|center_vertical"
            android:text="SALIR"
            android:textColor="@drawable/txt_btn"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtresultadolog"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/gothica1black"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/logoprontec"
            android:layout_width="142dp"
            android:layout_height="46dp"
            android:layout_marginLeft="75sp"
            android:layout_marginRight="75sp"
            android:layout_marginBottom="-40sp"
            app:srcCompat="@drawable/pronteclogoh" />

    </LinearLayout>

</LinearLayout>
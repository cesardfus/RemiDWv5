<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopollos"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".secundarios.OptionsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbaropciones"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_dark"
        android:elevation="4dp"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txttelgranja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/gothica1black"
                android:gravity="center_horizontal|center_vertical"
                android:text="000000000"
                android:textColor="@color/blackcolor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider13"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/btntraerconfig"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothica1black"
                android:text="TRAER CONFIGURACION" />

            <View
                android:id="@+id/divider9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:background="?android:attr/listDivider" />

            <Switch
                android:id="@+id/swtautoinicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothica1black"
                android:text="AUTOINICIO"
                android:textStyle="bold|italic" />

            <View
                android:id="@+id/divider10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="?android:attr/listDivider" />

            <Switch
                android:id="@+id/swautomensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothica1black"
                android:text="AUTOMENSAJE"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:id="@+id/layoutmensaje"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="185sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gothica1black"
                    android:text="Tiempo entre mensajes" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/gothica1black"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="number"
                    android:text="0" />

                <Button
                    android:id="@+id/btnsetautomensaje"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gothica1black"
                    android:text="Button" />
            </LinearLayout>

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothica1black"
                android:gravity="center_horizontal|center_vertical"
                android:text="CONFIGURACIÓN DEL GALPON"
                android:textColor="@color/blackcolor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spngalpon"
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="185sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gothica1black"
                    android:text="Valor maximo de temperatura" />

                <EditText
                    android:id="@+id/etxmax"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/gothica1black"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="number"
                    android:text="0" />

                <Button
                    android:id="@+id/btnsetmax"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gothica1black"
                    android:text="SETEAR" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gothica1black"
                    android:text="Valor minimo de temperatura" />

                <EditText
                    android:id="@+id/etxmin"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/gothica1black"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="number"
                    android:text="0" />

                <Button
                    android:id="@+id/btnsetmin"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gothica1black"
                    android:text="SETEAR" />

            </LinearLayout>

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/gothica1black"
                android:gravity="center_horizontal|center_vertical"
                android:text="CONFIGURACIÓN DE LA GRANJA"
                android:textColor="@color/blackcolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gothica1black"
                android:text="Agregar un teléfono a la alerta de la granja" />

            <EditText
                android:id="@+id/etxtelagregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:ems="10"
                android:fontFamily="@font/gothica1black"
                android:gravity="center_horizontal|center_vertical"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnagregarcel"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothica1black"
                android:text="AGREGAR" />

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/btnsalir"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothica1black"
                android:text="ATRAS"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="666dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
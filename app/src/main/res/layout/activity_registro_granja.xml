<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopollos"
    android:orientation="vertical"
    tools:context=".secundarios.RegistroGranja">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:gravity="center_horizontal|center_vertical"
        android:text="DATOS DE GRANJA"
        android:textColor="@color/blackcolor"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbltelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center_horizontal|center_vertical"
                android:text="0"
                android:textColor="@color/blackcolor"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/lblnombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:ems="10"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:textColor="@color/blackcolor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/lbldireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:ems="10"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Direccion"
                android:inputType="textPersonName"
                android:textColor="@color/blackcolor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/lblpropietario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:ems="10"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Propietario"
                android:inputType="textPersonName"
                android:textColor="@color/blackcolor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/lblintegracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:ems="10"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Integracion"
                android:inputType="textPersonName"
                android:textColor="@color/blackcolor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/lblcantgalp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:ems="10"
                android:gravity="center_horizontal|center_vertical"
                android:inputType="number"
                android:textColor="@color/blackcolor"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btncargar"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:gravity="center_horizontal|center_vertical"
                android:text="CARGAR" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>